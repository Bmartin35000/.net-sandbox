@model FilmUtilisateur

@{
    ViewData["Title"] = "Ajouter à ma liste";
}

<h1>Ajouter à ma liste</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vu" class="control-label"></label>
                @Html.CheckBoxFor(m => m.Vu)
                <span asp-validation-for="Vu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">

            @Html.HiddenFor(m => m.IdFilm)
            @Html.HiddenFor(m => m.IdUtilisateur)

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
